<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= guild.name %> - Bot Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-900 text-white min-h-screen">
    <nav class="bg-gray-800 border-b border-gray-700">
        <div class="container mx-auto px-6 py-4 flex items-center justify-between">
            <div class="flex items-center gap-4">
                <a href="/dashboard" class="text-gray-400 hover:text-white"><i class="fas fa-arrow-left"></i></a>
                <span class="text-xl font-bold"><%= guild.name %></span>
            </div>
            <div class="flex items-center gap-4">
                <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" class="w-8 h-8 rounded-full">
                <a href="/logout" class="text-gray-400 hover:text-white">Logout</a>
            </div>
        </div>
    </nav>

    <main class="container mx-auto px-6 py-10">
        <form id="settingsForm" class="max-w-2xl">
            <div class="bg-gray-800 border border-gray-700 rounded-xl p-6 mb-6">
                <h2 class="text-lg font-semibold mb-4"><i class="fas fa-cog mr-2 text-blue-500"></i>General Settings</h2>
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm text-gray-400 mb-1">Prefix</label>
                        <input type="text" name="prefix" value="<%= settings.prefix %>" class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-2 focus:border-blue-500 outline-none">
                    </div>
                    <div>
                        <label class="block text-sm text-gray-400 mb-1">Welcome Channel ID</label>
                        <input type="text" name="welcomeChannel" value="<%= settings.welcomeChannel || '' %>" class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-2 focus:border-blue-500 outline-none">
                    </div>
                    <div>
                        <label class="block text-sm text-gray-400 mb-1">Welcome Message</label>
                        <textarea name="welcomeMessage" rows="3" class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-2 focus:border-blue-500 outline-none"><%= settings.welcomeMessage || '' %></textarea>
                    </div>
                    <div>
                        <label class="block text-sm text-gray-400 mb-1">Log Channel ID</label>
                        <input type="text" name="logChannel" value="<%= settings.logChannel || '' %>" class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-2 focus:border-blue-500 outline-none">
                    </div>
                </div>
            </div>

            <div class="bg-gray-800 border border-gray-700 rounded-xl p-6 mb-6">
                <h2 class="text-lg font-semibold mb-4"><i class="fas fa-shield-alt mr-2 text-green-500"></i>Protection</h2>
                <div class="space-y-4">
                    <label class="flex items-center gap-3 cursor-pointer">
                        <input type="checkbox" name="antiSpam" <%= settings.antiSpam ? 'checked' : '' %> class="w-5 h-5 rounded">
                        <span>Anti-Spam</span>
                    </label>
                    <label class="flex items-center gap-3 cursor-pointer">
                        <input type="checkbox" name="antiRaid" <%= settings.antiRaid ? 'checked' : '' %> class="w-5 h-5 rounded">
                        <span>Anti-Raid</span>
                    </label>
                </div>
            </div>

            <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 py-3 rounded-xl font-semibold">
                <i class="fas fa-save mr-2"></i>Save Settings
            </button>
        </form>
    </main>

    <script>
        document.getElementById('settingsForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const form = e.target;
            const data = {
                prefix: form.prefix.value,
                welcomeChannel: form.welcomeChannel.value,
                welcomeMessage: form.welcomeMessage.value,
                logChannel: form.logChannel.value,
                antiSpam: form.antiSpam.checked,
                antiRaid: form.antiRaid.checked
            };

            const res = await fetch('/api/guild/<%= guild.id %>', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });

            if (res.ok) {
                alert('Settings saved!');
            }
        });
    </script>
</body>
</html>
